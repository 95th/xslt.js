mkdir -p build
mkdir -p libxml2/m4
mkdir -p libxml2/build

# Build libxml2
cd libxml2
autoreconf -if -Wall
emconfigure ./configure CFLAGS="-O3" --with-ftp=off --with-python=off --with-threads=off --disable-shared
rm -f a.wasm
cd ..

# Build libxslt
cd libxslt
autoreconf -if -Wall
emconfigure ./configure CFLAGS="-O3" --with-libxml-src=../libxml2 --with-python=no --disable-shared
rm -f a.wasm
cd ..